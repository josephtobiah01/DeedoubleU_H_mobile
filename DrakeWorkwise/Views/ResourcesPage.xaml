               BackgroundColor="Black" 
               CornerRadius="0" 
               VerticalOptions="FillAndExpand"
               HeightRequest="150" 
               HorizontalOptions="FillAndExpand" >

            <Image Opacity="0.5" Source="pg_1.png" Aspect="AspectFill"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        </Frame>

        <Grid Grid.Row="1" 
              Margin="5,2"
              x:Name="controlsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Frame  Grid.Row="0" BackgroundColor="#C8C8C8" Padding="4"  HorizontalOptions="FillAndExpand" BorderColor="Transparent" Margin="4">
                <!--<StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" HeightRequest="50">-->
                <Grid HeightRequest="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Frame Grid.Column="0" HorizontalOptions="FillAndExpand" BorderColor="Transparent" CornerRadius="5" BackgroundColor="{Binding ArticlesSelected, Converter={x:StaticResource boolCol}, ConverterParameter='#ffffff|#C8C8C8'}" Padding="10,1">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LoadResourcesCommand}" CommandParameter="art"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Articles" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    </Frame>
                    <Frame  Grid.Column="1" HorizontalOptions="FillAndExpand" BorderColor="Transparent" CornerRadius="5" BackgroundColor="{Binding ExternalSelected, Converter={x:StaticResource boolCol}, ConverterParameter='#ffffff|#C8C8C8'}" Padding="10,1">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LoadResourcesCommand}" CommandParameter="ext"/>
                        </Frame.GestureRecognizers>
                        <Label Text="External Resources" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    </Frame>
                </Grid>
                <!--</StackLayout>-->
