<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrakeWorkwise.CustomControls.ResourceItem">
    <VerticalStackLayout Grid.Column="0" 
                                                         Padding="5">
        <VerticalStackLayout.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding OpenResourceCommand}" CommandParameter="{Binding .}"/>
        </VerticalStackLayout.GestureRecognizers>

        <Label Text="{Binding Title}" 
                                               FontSize="Medium" FontAttributes="Bold" 
                                               Margin="7"/>

        <Label Text="{Binding ShortDescription}" 
                                               Margin="7" 
                                               FontSize="Small" LineBreakMode="WordWrap"/>

        <BoxView HeightRequest="2" 
                                             BackgroundColor="Gray"
                                             Opacity="1" HorizontalOptions="FillAndExpand" 
                                             VerticalOptions="Start" Margin="10,12" 
                                             Grid.Row="1" Grid.ColumnSpan="2"/>

    </VerticalStackLayout>
</ContentView>
