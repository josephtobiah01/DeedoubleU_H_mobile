<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrakeWorkwise.CustomControls.LinkSet"
             x:Name="linkSet">
    <Frame BackgroundColor="#ffffff" CornerRadius="10" Margin="3" Padding="14">
        <Grid  Margin="0" RowDefinitions="75*, 25*"
               RowSpacing="10">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding LinkCommand, Source={x:Reference linkSet}}" CommandParameter="{Binding LinkParameter}"/>
            </Grid.GestureRecognizers>
            <Image Grid.Row="0" Source="{Binding Image}" Margin="0" Aspect="AspectFit"/>
            <Label Grid.Row="1"
            Text="{Binding Text}" TextColor="Black" FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </Grid>
    </Frame>
</ContentView>
